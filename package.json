{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "install:portfolio":"yarn --cwd apps/portfolio",
    "build:portfolio": "yarn build --filter=portfolio",
    "dev:web": "yarn dev --filter=web",
    "build:web": "yarn build --filter=web",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "fix": "yarn format && yarn type-check && yarn clean",
    "install:package": "yarn --cwd ./packages/ui && yarn --cwd apps/portfolio && yarn --cwd apps/web "
  },
  "devDependencies": {
    "lint-staged": "^15.2.7",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.0.6"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "with-tailwind",
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "package/ui/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
